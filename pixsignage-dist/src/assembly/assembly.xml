<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dist</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<directory>${project.parent.basedir}/pixsignage-admin/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>*.war</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/pixsignage-api/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>*.war</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/install</directory>
			<outputDirectory>install</outputDirectory>
			<lineEnding>unix</lineEnding>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/dbscript</directory>
			<outputDirectory>dbscript</outputDirectory>
			<lineEnding>unix</lineEnding>
			<fileMode>0644</fileMode>
		</fileSet>
	</fileSets>
</assembly>