	</bean>

	<bean id="startQuertz" lazy-init="false" autowire="no" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<!-- 
				<ref bean="activemqNormalJobTrigger" />
				<ref bean="activemqDailyJobTrigger" />
				<ref bean="vcssJobTrigger" /> 
				<ref bean="pixboxJobTrigger" />
				-->
				<ref bean="deviceJobTrigger" />
				<ref bean="weatherJobTrigger" />
				<ref bean="videoJobTrigger" />
				<ref bean="playlogJobTrigger" />
				<ref bean="pflowJobTrigger" />
			</list>
		</property>
	</bean>

</beans>