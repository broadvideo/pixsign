		</property>
	</bean>
	<bean id="activemqDailyJobTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="activemqDailyJob" />
		</property>
		<property name="cronExpression">
			<value>0 0 3 * * ?</value>
		</property>
	</bean>

	<bean id="deviceTask" class="com.broadvideo.pixsignage.quartz.DeviceTask"></bean>
