		</property>
		<property name="cronExpression">
			<value>5 * * * * ?</value>
		</property>
	</bean>

	<bean id="vcssTask" class="com.broadvideo.pixsignage.quartz.VCSSTask"></bean>
	<bean id="vcssJob" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
