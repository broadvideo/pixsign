<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.broadvideo.pixsignage.persistence.TimezoneMapper" >
  <resultMap id="BaseResultMap" type="com.broadvideo.pixsignage.domain.Timezone" >
    <id column="timezoneid" property="timezoneid" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    timezoneid, name
  </sql>
  
  <select id="selectByPrimaryKey" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from timezone
    where timezoneid = #{timezoneid}
  </select>
  
  <select id="selectCount" resultType="Integer">
    select count(1) from timezone
    where 1 = 1
    <if test="search != null">
      and name like #{search}
    </if>
  </select>

  <select id="selectList" resultMap="BaseResultMap">
    select * from timezone
    where 1 = 1
    <if test="search != null">
      and name like #{search}
    </if>
    order by timezoneid
    <if test="start != null and length != null">
      limit ${start}, ${length}
    </if>
  </select>

</mapper>